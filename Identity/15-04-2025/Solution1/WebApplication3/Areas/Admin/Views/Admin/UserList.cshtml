@model IEnumerable<WebApplication3.Areas.Admin.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h2>@ViewData["Title"]</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Roller</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserName</td>
                <td>@string.Join(", ", u.Roles)</td>
                <td>
                    <a asp-area="Admin"
                       asp-controller="Admin"
                       asp-action="EditRoles"
                       asp-route-userId="@u.UserId"
                       class="btn btn-sm btn-primary">
                        Düzenle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
