@model IEnumerable<YasinMadenMVC.Models.ViewModels.MakaleViewModels.MakaleListele_VM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayinlanmaTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoriler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YayinlanmaTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @foreach (var kategori in item.Kategoriler)
                    {
                        <p>
                            @kategori
                        </p>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Makale" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-controller="Makale" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a onclick="return confirm('Bu makaleyi silmek istediğinize emin misiniz?');" asp-action="Delete" asp-controller="Makale" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
