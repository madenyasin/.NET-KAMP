@model YasinMadenMVC.Models.ViewModels.MakaleViewModels.MakaleEkleForm_VM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MakaleEkle_VM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Makale.Baslik" class="control-label"></label>
                <input asp-for="Makale.Baslik" class="form-control" />
                <span asp-validation-for="Makale.Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Makale.Icerik" class="control-label"></label>
                <input asp-for="Makale.Icerik" class="form-control" />
                <span asp-validation-for="Makale.Icerik" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Makale.SecilenKategoriIdleri" class="control-label"></label>
                <br />
                @foreach (var kategori in Model.Kategoriler)
                {
                    <input class="form-check-input" type="checkbox" name="Makale.SecilenKategoriIdleri" value="@kategori.Id" />
                    <label>@kategori.Ad</label>
                    <br />
                }
                <span asp-validation-for="Makale.SecilenKategoriIdleri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
