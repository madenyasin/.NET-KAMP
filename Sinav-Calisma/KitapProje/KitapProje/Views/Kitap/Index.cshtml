@model IEnumerable<KitapProje.Models.ViewModels.KitapViewModels.KitapListeleVM>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ad)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fiyat)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ozet)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SayfaSayisi)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Kategoriler)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ad)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fiyat)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ozet)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SayfaSayisi)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserName)
				</td>
				<td>
					@foreach (var kategori in item.Kategoriler)
					{
						<span>@kategori </span>
					}
				</td>
				<td>
					<a asp-action="Edit" asp-controller="Kitap" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
					<a asp-action="Details" asp-controller="Kitap" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
					<a onclick="return confirm('Bu kitabı silmek istediğinize emin misiniz?');" asp-action="Delete" asp-controller="Kitap" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>

				</td>
			</tr>
		}
	</tbody>
</table>
