@model List<Northwind.ViewModels.ProductList_VM>

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">ProductName</th>
			<th scope="col">SupplierId</th>
			<th scope="col">CategoryId</th>
			<th scope="col">QuantityPerUnit</th>
			<th scope="col">UnitPrice</th>
			<th scope="col">UnitsInStock</th>
			<th scope="col">UnitsOnOrder</th>
			<th scope="col">ReorderLevel</th>
			<th scope="col">Discontinued</th>
			<th scope="col">Operations</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in @Model)
		{
			<tr>
				<td scope="col">@item.ProductId</td>
				<td scope="col">@item.ProductName</td>
				<td scope="col">@item.SupplierId</td>
				<td scope="col">@item.CategoryId</td>
				<td scope="col">@item.QuantityPerUnit</td>
				<td scope="col">@item.UnitPrice</td>
				<td scope="col">@item.UnitsInStock</td>
				<td scope="col">@item.UnitsOnOrder</td>
				<td scope="col">@item.ReorderLevel</td>
				<td scope="col">@item.Discontinued</td>
				<td scope="col">
					<div class="btn-group" role="group">
						<a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-outline-warning">Edit</a>
						<a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-outline-info">Details</a>
						<a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-outline-danger">Delete</a>
					</div>
				</td>
			</tr>

		}
	</tbody>

</table>